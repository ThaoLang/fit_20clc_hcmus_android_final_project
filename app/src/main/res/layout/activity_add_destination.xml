<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/CustomColor10"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/destination_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/default_add_new_destination_title"
            app:titleCentered="true"
            app:titleTextColor="@color/cardview_light_background"
            android:background="@color/CustomColor10"
            app:navigationIcon="@drawable/back_icon"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/vertical_top_half_pill_shape_background">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/default_destination_name"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/CustomColor12"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/destination_formal_name"
                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:layout_marginHorizontal="15dp"
                    android:inputType="textMultiLine"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/destination_search_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-68dp"
                    android:layout_marginTop="-8dp"
                    app:icon="@drawable/ic_search_48px"
                    app:iconGravity="textStart"
                    app:iconSize="30dp"
                    app:iconPadding="2dp"
                    app:iconTint="@color/CustomColor12"
                    app:backgroundTint="@color/md_theme_light_primaryContainer"
                    android:contentDescription="search button"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="Alias"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/CustomColor12"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/destination_alias"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="15dp"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start date"
                        android:textColor="@color/CustomColor12"
                        android:layout_marginRight="38dp"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/destination_start_date_picker"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/calendar_month_48px"
                        app:backgroundTint="@color/cardview_dark_background"
                        android:contentDescription="date picker"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End date"
                        android:textColor="@color/CustomColor12"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="70dp"
                        android:paddingRight="30dp"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/destination_end_date_picker"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/calendar_month_48px"
                        app:backgroundTint="@color/cardview_dark_background"
                        android:contentDescription="end date picker"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/destination_start_date"
                        android:layout_width="150dp"
                        android:layout_height="50sp"
                        android:layout_marginRight="68dp"
                        android:inputType="date"
                        />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/destination_end_date"
                        android:layout_width="150dp"
                        android:layout_height="50sp"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start time"
                        android:textColor="@color/CustomColor12"
                        android:layout_marginRight="36dp"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/destination_start_time_picker"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/schedule_48px"
                        app:backgroundTint="@color/cardview_dark_background"
                        android:contentDescription="time picker for selecting start time"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End time"
                        android:textColor="@color/CustomColor12"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="70dp"
                        android:paddingRight="32dp"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/destination_end_time_picker"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/schedule_48px"
                        app:backgroundTint="@color/cardview_dark_background"
                        android:contentDescription="end time picker"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/destination_start_time"
                        android:layout_width="150dp"
                        android:layout_height="50sp"
                        android:layout_marginRight="68dp"
                        />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/destination_end_time"
                        android:layout_width="150dp"
                        android:layout_height="50sp"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="Description"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/CustomColor12"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/destination_description"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginHorizontal="12dp"
                android:inputType="textMultiLine"
                android:maxHeight="250dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical"
                />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/destination_main_button"
                android:layout_marginTop="22dp"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="Add"
                android:textColor="@color/cardview_dark_background"
                app:backgroundTint="@color/CustomColor5"
                android:layout_marginBottom="40dp"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.core.widget.NestedScrollView>