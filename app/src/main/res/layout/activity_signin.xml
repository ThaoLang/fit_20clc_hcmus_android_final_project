<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textFontWeight="700"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="78dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelEmailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/editTextEmailAddress"
                    android:text="Email address"
                    tools:layout_editor_absoluteX="150dp"
                    tools:layout_editor_absoluteY="78dp" />

                <EditText
                    android:id="@+id/editTextEmailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:tooltipText="Enter your email address"
                    tools:layout_editor_absoluteX="82dp"
                    tools:layout_editor_absoluteY="132dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:gravity="right"
                    android:labelFor="@id/editTextPassword"
                    android:text="Password"
                    tools:layout_editor_absoluteX="150dp"
                    tools:layout_editor_absoluteY="78dp" />

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:tooltipText="Enter your password"
                    tools:layout_editor_absoluteX="85dp"
                    tools:layout_editor_absoluteY="301dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LET'S GO!"
                    app:backgroundTint="#2dd5b8" />

                <TextView
                    android:id="@+id/textViewForget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Forget your password?"
                    android:textFontWeight="700"
                    android:textSize="13sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>