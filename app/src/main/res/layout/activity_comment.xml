<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:src="@drawable/close_icon"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/md_theme_light_onPrimary"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Write a comment..."
                app:hintTextColor="@color/CustomColor1"
                android:textCursorDrawable="@color/CustomColor1"
                android:backgroundTint="@color/md_theme_light_shadow"
                app:boxStrokeWidth="3dp"
                app:boxStrokeColor="@color/CustomColor1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/chat_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chat_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAlignBottom="false"
                android:clickable="true"
                android:drawableLeft="@drawable/baseline_send_24"
                android:drawableTint="@color/CustomColor7"
                android:backgroundTint="@color/md_theme_light_onPrimary"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
<!--            android:gravity="top|center_vertical" />-->

</LinearLayout>